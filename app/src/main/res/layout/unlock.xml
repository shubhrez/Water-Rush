<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/questbackground"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/goal1"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:text="Quest"
        android:paddingTop="5dp"
        android:textSize="45dp"
        android:gravity="center"
        android:textStyle="italic|bold"
        />


        <ImageView
            android:id="@+id/goal2"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#00B2FF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        >

        <ImageView
            android:id="@+id/bucket"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/bucketText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        >

        <ImageView
            android:id="@+id/bigdrop"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/bigdropText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        >

        <ImageView
            android:id="@+id/crystal"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/crystalText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        >

        <ImageView
            android:id="@+id/snow"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/snowText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        >

        <TextView
            android:id="@+id/multiplier"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:text="x2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/multiplierText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15"
        android:background="@drawable/border"
        >

        <ImageView
            android:id="@+id/endless"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/endlessText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>