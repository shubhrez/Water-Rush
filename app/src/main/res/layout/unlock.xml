<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/questbackground"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/goal1"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:text="Quest"
            android:padding="5dp"
            android:textSize="45dp"
            android:gravity="center"
            android:textStyle="italic|bold"
            />


        <ImageView
            android:id="@+id/goal2"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#00B2FF"/>

    <ImageView
        android:background="@drawable/top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/bucket"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:text="Magic Bucket"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/bucketDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="@string/bucketdesc"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/bucketText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/bigdrop"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Thunder Drops "
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/bigdropDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/bigdropdesc"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bigdropText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/crystal"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Freeze Crystal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/crystalDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/crystaldesc"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/crystalText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/snow"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Snow Ball"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/snowDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/snowdesc"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/snowText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/multiplier"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:text="x2"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="25dp"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="Double"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/multiplierDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:text="@string/multiplierdesc"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/multiplierText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/endless"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:text="Endless"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/endlessDesc"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="@string/endlessdesc"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/endlessText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        />


    <ImageView
        android:background="@drawable/bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="10"
        >
        <Button
            android:id="@+id/start"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Start Game"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/back"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>